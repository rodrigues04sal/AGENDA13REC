<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="AGENDA13REC.MainPage"
    Title="Início">

    <VerticalStackLayout Padding="30" Spacing="25">

        <!-- Título da página -->
        <Label Text="AGENDA 13 - App Hotel"
               FontSize="32"
               FontAttributes="Bold"
               HorizontalOptions="Center"/>

        <!-- Botão para ir à tela Sobre -->
        <Button Text="Sobre o Aplicativo"
                Clicked="GoToSobre"/>

        <!-- Botão para ir ao cálculo de diária -->
        <Button Text="Cálculo de Diária"
                Clicked="GoToDiaria"/>

    </VerticalStackLayout>

</ContentPage>
